/*-------------------
       Fonts
--------------------*/

@headerFont        : 'Helvetica Neue', Helvetica, STHeiTi, Arial, sans-serif;
@pageFont          : 'Helvetica Neue', Helvetica, STHeiTi, Arial, sans-serif;
@fontSmoothing     : antialiased;

/*-------------------
      Base Sizes
--------------------*/

@emSize   : 12px;
@fontSize : 12px;

/*--------------
  Page Heading
---------------*/

@headerFontWeight : bold;
@headerLineHeight : 1.33em;

/* Used to match floats with text */
@lineHeightOffset       : ((@lineHeight - 1em) / 2);
@headerLineHeightOffset : (@headerLineHeight - 1em) / 2;

@h1               : 2rem;
@h2               : 1.714rem;
@h3               : 1.28rem;
@h4               : 1.071rem;
@h5               : 1rem;

/* Header Spacing */
@headerTopMargin    : ~"calc(2rem - "@headerLineHeightOffset~")";
@headerBottomMargin : 1rem;
@headerMargin       : @headerTopMargin 0em @headerBottomMargin;

/*-------------------
      Site Colors
--------------------*/

